<Window x:Class="test.PostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="PostWindow" Height="520" Width="800">
    <Grid Background="AliceBlue">
        <StackPanel>
            <TextBlock FontSize="20">ID анека:</TextBlock>
            <TextBox FontSize="18" Margin="0,0,0,30" x:Name="idTBox"></TextBox>

            <TextBlock FontSize="20">Aнек:</TextBlock>
            <TextBox FontSize="18" Margin="0,0,0,30" x:Name="anekTBox"></TextBox>
            <Button Height="100" Click="Button_Click"> удалить по id</Button>
            <Button Height="100" Margin="0,5" Click="Button2_Click">добавить новый</Button>
        </StackPanel>
        <Button VerticalAlignment="Bottom" Height="100" Click="Button1_Click">изменить по id</Button>
    </Grid>
</Window>
